#!/bin/bash
#
# arksync 0.1

usage=$(
cat <<EOF
$0 [OPTION]
	-c		- confirm before sending archive
	-f file		- send only the named archive
	-i		- install default utilities at destination
EOF
)

query=false
answer="y"
file=""
remote=""
user=""
installer=false

rsyncmd="rsync -vat --no-owner --no-group"

function do_exit {
	echo "$usage"
	exit 1
}

while getopts "cif:" OPTION; do
	case "$OPTION" in
		c ) 	query=true
			;;
		f ) 	file="$OPTARG"
			[ "$file" ] || do_exit
			;;
		i )	installer=true
			;;
		* ) 	do_exit
			;;
	esac
done

echo

for remote in \
"root@hp-octane-01" \
"camuso@hp-octane-01" \
"tcamuso@desktop" \
"root@desktop" \
"root@localhost" \
"tcamuso@dinar" \
"root@dinar"
do
	user="$(echo $remote | cut -d'@' -f1)"
	hos="$(echo $remote | cut -d'@' -f2)"

	if $query; then
		echo -n "rsync ~/ark/$file with $remote (y/n)? "
		read -n1 answer
		echo
	fi

	[ "$answer" == "q" ] && exit 1

	if [ "$answer" == "y" ]; then
		echo "connecting with $remote..."
		$rsyncmd ~/ark/$file $remote:ark/$file
		$installer && \
		runremote $user $hos ~/bin/init-my-stuff $user "install" || \
		runremote $user $hos ~/bin/init-my-stuff $user
		echo
	fi
done

